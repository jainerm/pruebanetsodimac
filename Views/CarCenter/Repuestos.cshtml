@{

    ViewBag.Title = "Cliente";
}

<div class="container-fluid">
    <div class="hero row align-items-center">
        <div class="col-lg-7 col-md-6">
            <div class="about-img">
                <h2 class="fa-5x">Venta Repuestos</h2>
            </div>
        </div>
        <div class="col-lg-5 col-md-6">
            <div class="about-text">
                <div class="form">
                    <h2>Datos del repuesto</h2>
                    <form>
                        <div class="row">
                            <div class="col-lg-10 col-md-1">
                                <input class="form-control mt-2 fa-2x" type="text" placeholder="Codigo mecánico">
                            </div>
                            <div class="col-lg-2 col-md-1">
                                <button class="btn btn-default fa-2x mt-2"><i class="far fa-comment-dots"></i></button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-10 col-md-1">
                                <input class="form-control mt-2 fa-2x" type="text" placeholder="Codigo cliente">
                            </div>
                            <div class="col-lg-2 col-md-1">
                                <button class="btn btn-default fa-2x mt-2"><i class="far fa-comment-dots"></i></button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-10 col-md-1">
                                <input class="form-control mt-2 fa-2x" type="text" placeholder="Codigo repuesto">
                            </div>
                            <div class="col-lg-2 col-md-1">
                                <button class="btn btn-default fa-2x mt-2"><i class="far fa-comment-dots"></i></button>
                            </div>
                        </div>
                        <textarea class="form-control mt-2 fa-2x" placeholder="Descrpicón repuesto"></textarea>
                        <input class="form-control mt-2 fa-2x" type="number" maxlength="3" placeholder="Cantidad">
                        <input class="form-control mt-2 fa-2x" type="number" placeholder="Valor repuesto">
                        <input class="form-control mt-2 fa-2x" type="number" placeholder="Total">
                        <button class="btn bg-success fa-2x mt-4">Ingresar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <hr />
</div>
<div class="hero row align-items-center mt-4">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <td class="bg-warning fa-2x">Cod. Repuesto</td>
                <td class="bg-info fa-2x">Descripción repuesto</td>
                <td class="bg-info fa-2x">Cantidad</td>
                <td class="bg-info fa-2x">Valor repuesto</td>
                <td class="bg-info fa-2x">Total</td>
                <td class="bg-info fa-2x">Presupuesto</td>
            </tr>
            <! --- Detalla de los items cendidos --->
        </table>
    </div>
</div>
